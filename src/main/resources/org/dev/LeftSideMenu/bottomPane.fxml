<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<StackPane fx:id="bottomMainStackPane" maxHeight="300.0" stylesheets="@../../../styles/bottomPaneStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dev.LeftSideMenu.BottomPaneController">
   <children>
      <VBox>
         <children>
            <StackPane fx:id="resizeStackPane" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="10.0" style="-fx-background-color: red;">
               <cursor>
                  <Cursor fx:constant="S_RESIZE" />
               </cursor></StackPane>
            <StackPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0">
               <children>
                  <Group StackPane.alignment="CENTER_RIGHT">
                     <children>
                        <StackPane fx:id="minimizeStackPaneButton" styleClass="minimize-stackpane-button">
                           <children>
                              <Line endX="10.0" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                           </padding>
                        </StackPane>
                     </children>
                     <StackPane.margin>
                        <Insets right="10.0" />
                     </StackPane.margin>
                  </Group>
               </children>
            </StackPane>
            <ScrollPane fitToWidth="true" hbarPolicy="ALWAYS" vbarPolicy="ALWAYS">
               <content>
                  <VBox fx:id="bottomTextVBox" prefHeight="200.0" prefWidth="450.0" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</StackPane>
