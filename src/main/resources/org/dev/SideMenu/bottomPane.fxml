<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<StackPane fx:id="bottomMainStackPane" maxHeight="400.0" minHeight="400.0" prefHeight="400.0" prefWidth="600.0" stylesheets="@../../../styles/SideMenu/bottomPaneStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dev.SideMenu.BottomPaneController">
   <children>
      <VBox>
         <children>
            <VBox fx:id="topVBoxHeader">
               <children>
                  <StackPane fx:id="resizeStackPane" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="10.0">
                     <cursor>
                        <Cursor fx:constant="S_RESIZE" />
                     </cursor>
                  </StackPane>
                  <StackPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0">
                     <children>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0" StackPane.alignment="CENTER_RIGHT">
                           <StackPane.margin>
                              <Insets />
                           </StackPane.margin>
                           <children>
                              <Group>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                                 <children>
                                    <StackPane fx:id="trashStackPaneButton" styleClass="initiate-button">
                                       <children>
                                          <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@../../../images/icons/trash-icon.png" />
                                             </image>
                                          </ImageView>
                                       </children>
                                       <padding>
                                          <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                                       </padding>
                                    </StackPane>
                                 </children>
                              </Group>
                              <Group>
                                 <children>
                                    <StackPane fx:id="minimizeStackPaneButton" styleClass="initiate-button">
                                       <children>
                                          <Line endX="10.0" />
                                       </children>
                                       <padding>
                                          <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                                       </padding>
                                    </StackPane>
                                 </children>
                              </Group>
                           </children>
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </StackPane>
               </children>
            </VBox>
            <ScrollPane fx:id="logScrollPane">
               <content>
                  <VBox fx:id="bottomTextVBox" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</StackPane>
